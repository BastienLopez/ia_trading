FROM python:3.11-slim

WORKDIR /app

# Installation des dépendances système y compris celles nécessaires pour OpenCV et TensorFlow
RUN apt-get update && apt-get install -y \
    git \
    build-essential \
    libgl1-mesa-glx \
    libglib2.0-0 \
    libsm6 \
    libxrender1 \
    libxext6 \
    # Dépendances pour TensorFlow sur Linux
    libhdf5-dev \
    # Nettoyage pour réduire la taille de l'image
    && rm -rf /var/lib/apt/lists/*

# Copier les requirements
COPY requirements.txt .

# Installer les dépendances Python avec considération pour les différentes plateformes
# Remarque: Les versions spécifiques de TensorFlow sont compatibles avec Linux 
# mais peuvent nécessiter des ajustements sur Windows
RUN pip install --no-cache-dir -r requirements.txt

# Ajouter pytest et ses plugins pour les tests
RUN pip install pytest pytest-cov pytest-sugar pytest-timeout pytest-repeat pytest-mock pytest-xdist

# Configuration spécifique pour TensorFlow dans l'environnement Docker
ENV TF_CPP_MIN_LOG_LEVEL=2
# Désactiver l'utilisation du GPU si non disponible
ENV CUDA_VISIBLE_DEVICES=-1

# Copier le code source
COPY . .

# Créer un répertoire pour les rapports de test
RUN mkdir -p /app/test-reports

# Par défaut, exécuter tous les tests avec génération de rapport de couverture
# Mais permettre de remplacer la commande pour des tests spécifiques
ENTRYPOINT ["python", "-m", "pytest", "-v", "-rs", "--cov=ai_trading", "--cov-report=html:/app/test-reports/coverage"]
CMD ["ai_trading/tests/", "web_app/tests/"] 